{
  "dashboard": {
    "title": "Security Attacks Dashboard - Real-Time Monitoring",
    "tags": ["security", "attacks", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Total Attacks (Last 5 min)",
        "type": "stat",
        "targets": [
          {
            "expr": "security_attacks_total"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "text": {}
        }
      },
      {
        "title": "Critical Attacks",
        "type": "stat",
        "targets": [
          {
            "expr": "security_attack_by_severity{severity=\"critical\"}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "title": "High Severity Attacks",
        "type": "stat",
        "targets": [
          {
            "expr": "security_attack_by_severity{severity=\"high\"}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "orange", "value": 10}
              ]
            }
          }
        }
      },
      {
        "title": "Medium Severity Attacks",
        "type": "stat",
        "targets": [
          {
            "expr": "security_attack_by_severity{severity=\"medium\"}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10}
              ]
            }
          }
        }
      },
      {
        "title": "Attack Rate by Type (Real-time)",
        "type": "table",
        "targets": [
          {
            "expr": "security_attack_by_type",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 0, "y": 8},
        "options": {
          "showHeader": true,
          "sortBy": [{"name": "Value", "displayName": "Count", "desc": true}]
        }
      },
      {
        "title": "Attacks by Category",
        "type": "piechart",
        "targets": [
          {
            "expr": "security_attack_by_category"
          }
        ],
        "gridPos": {"h": 12, "w": 12, "x": 12, "y": 8},
        "options": {
          "displayLabels": ["name", "percent"],
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      }
    ],
    "time": {"from": "now-15m", "to": "now"},
    "timepicker": {},
    "refresh": "10s",
    "schemaVersion": 38,
    "version": 0,
    "uid": "security-attacks-dashboard",
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "links": [],
    "liveNow": false,
    "templating": {"list": []}
  },
  "overwrite": true
}
